<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#CDDC39"
    tools:context=".activities.activities.MainActivity">

    <TextView
        android:gravity="center"
        android:textSize="25sp"
        android:fontFamily="@font/font"
        android:background="#FFCDDC39"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:text="@string/mathematical_game"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"


        >

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_margin="8dp"
                android:id="@+id/addBtn"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:background="@drawable/button_back"
                android:padding="25dp"
                android:src="@drawable/ic_stat_plus"
                android:textColor="@color/white"
                android:textSize="150sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_margin="8dp"
                android:id="@+id/subtractionBtn"
                android:padding="25dp"
                android:src="@drawable/ic_stat_minus"
                android:background="@drawable/minus_back"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:textSize="150sp"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/multiplyBtn"
                android:layout_margin="8dp"
                android:padding="35dp"
                android:src="@drawable/ic_stat_multiply"
                android:background="@drawable/carpma_btn"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:textSize="150sp"
                />

            <ImageView
                android:layout_margin="8dp"
                android:id="@+id/dividedBtn"
                android:padding="30dp"
                android:src="@drawable/ic_stat_divided"
                android:background="@drawable/divide_btn"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:textSize="150sp"
                />




        </LinearLayout>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5112439562846419/8822755736">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>

</LinearLayout>